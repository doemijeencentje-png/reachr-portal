# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-xxx

# Portal Security (for n8n to call our API)
PORTAL_API_KEY=generate_a_random_32_char_string

# n8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/xxx

# Encryption (for WordPress passwords)
ENCRYPTION_KEY=generate_a_random_32_char_string

# ===========================================
# Security Settings
# ===========================================

# HMAC Secret (for request signing from n8n)
# Generate: openssl rand -hex 32
# If set, n8n must sign requests with this secret
HMAC_SECRET=

# Rate Limiting
# Set to "true" to enable rate limiting
RATE_LIMIT_ENABLED=true

# Upstash Redis (required for rate limiting in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# IP Whitelist (optional)
# Comma-separated list of allowed IPs for API access
# Leave empty to allow all IPs
ALLOWED_IPS=
